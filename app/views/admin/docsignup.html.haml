- provide(:title, "Add Doctor")
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Profile Page
  %body{:style=>"background-color:#CCB"}
    %header#header
      %nav.navbar.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            -#%a.navbar-brand{:href => "home.html.haml"} UpDoc
            
            #imagebox 
              = link_to image_tag("Logo.png", :style => "height:65px;"), homepage_home_path(:refresh => 'refresh')
          .collapse.navbar-collapse.navbar-right
            %ul.nav.navbar-nav
              %li
                = link_to 'Home', homepage_home_path(:refresh => 'refresh')
              %li
                = link_to 'Sign Up', signup_signup_path()
              %li
                %a= link_to 'Login', login_path()
              %li
                = link_to 'Contact Us', contact_us_path()
  
  .row{:style=>"background-color:white;position:relative;top:120px;"}
    .col-md-12{:style=>"font-size:30px;padding:20px;"} Add Doctor
    .col-md-6.col-md-offset-3{:style=>"font-size:18px;color:red;padding-bottom:15px"}
      = flash[:notice]
    .col-md-6.col-md-offset-3
      
      = form_for(:session, url: docsignup_add_path) do |f|
        
        = f.label :firstname, "First Name"
        = f.text_field :firstname, class: 'form-control'
        = f.label :lastname, "Last Name"
        = f.text_field :lastname, class: 'form-control'
        = f.label :email, "Email"
        = f.email_field :email, class: 'form-control'
        = f.label :address, "Address"
        = f.text_field :address, class: 'form-control'
        = f.label :address, "Doctor ID"
        = f.text_field :pnumber, class: 'form-control'
        = f.label :password, "Password"
        = f.password_field :password, class: 'form-control'
        = f.label :confirmPassword, "Confirm Password"
        = f.password_field :confirmPassword, class: 'form-control'
        = f.submit "Sign Up", class: "btn btn-primary"
       
  #emptydiv{:style => "height: 200px"}